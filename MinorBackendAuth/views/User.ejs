<script>

    function getLocation() {
      if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(showPosition);
      }
    }
    
    function showPosition(position) {
        document.getElementById("lon").setAttribute("value", position.coords.longitude);
        document.getElementById("lon").value = position.coords.longitude;
        document.getElementById("lat").setAttribute("value", position.coords.latitude);
        document.getElementById("lat").value = position.coords.latitude;
        document.getElementById("form").submit();
    }
    
    
    
    
            let time = 10;
            let bool = false;
            function myStopFunction() {
                time = 10;
                var x = document.getElementById("stop");
                x.style.display = "none";
                var y = document.getElementById("sos");
                y.style.display = "block";
                bool = true;
            }
            function myFunction() {
  event.target.style.display = "none";
  var x = document.getElementById("stop");
  x.style.display = "block";
  x.innerHTML = "Stop SOS"; // Change the button text to "Stop SOS" when it's pressed
  document.getElementById('sosAudio').play();

  const loop = setInterval(function () {
    let t = time - 2;
    document.getElementById("countdown").innerHTML = "Cancel SOS in : " + t + " seconds";
    time--;
    if (time == 0) {
      clearInterval(loop);
      alert("SOS sent");
      document.getElementById("countdown").innerHTML = "";
      bool = false;
      getLocation();
      x.innerHTML = "SOS"; // Change the button text back to "SOS" when the time is over
    }
    if (bool) {
      var audio = document.getElementById("sosAudio");
      audio.pause();
      audio.currentTime = 0;
      document.getElementById("countdown").innerHTML = "";
      clearInterval(loop);
      bool = false;
    }
  }, 1000);
}
    
    
         
